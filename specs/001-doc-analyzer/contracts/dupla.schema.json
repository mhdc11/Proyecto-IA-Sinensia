{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dupla",
  "description": "Asociación entre un Documento y su Análisis, con metadata de estado",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Identificador único (mismo que documento.id)",
      "pattern": "^[a-f0-9]{16}$",
      "examples": ["a3f5d8e1b2c9f7e4"]
    },
    "documento": {
      "$ref": "./documento.schema.json",
      "description": "Metadatos del documento analizado"
    },
    "analisis": {
      "$ref": "./analisis.schema.json",
      "description": "Resultado del análisis estructurado"
    },
    "ts_creacion": {
      "type": "string",
      "description": "Timestamp ISO 8601 de cuando se completó el análisis",
      "format": "date-time",
      "examples": ["2026-02-18T14:35:00Z"]
    },
    "ts_actualizacion": {
      "type": "string",
      "description": "Timestamp ISO 8601 de última modificación",
      "format": "date-time",
      "examples": ["2026-02-18T14:35:00Z"]
    },
    "estado": {
      "type": "string",
      "description": "Estado de completitud del análisis",
      "enum": ["valido", "incompleto", "con_advertencias"],
      "examples": ["valido", "con_advertencias"]
    }
  },
  "required": ["id", "documento", "analisis", "ts_creacion", "ts_actualizacion", "estado"],
  "additionalProperties": false
}
